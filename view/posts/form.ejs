<div class="formgrp">
    <label for="title" class="mb-2">Title</label>
    <input id="title" type="text" name="title" value="<%=post.title%>" class="form-control" required>
</div>
<br>
<div class="formgrp">
    <label for="description" class="mb-2">Description</label>
    <textarea id="description" type="text" name="description" class="form-control" required><%=post.description%></textarea>
</div>
<br>
<div class="formgrp">
    <label for="markdown" class="mb-2">Markdown</label>
    <textarea id="markdown" type="text" name="markdown" class="form-control" required><%=post.markdown%></textarea>
</div>
<br><br>
<button type="submit" class="btn savebtn">Save Blog</button>
&nbsp;&nbsp;
<a href="/" class="btn discardbtn">Discard Changes</a>